{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./public/dist",
    "rootDir": "./public",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "module": "ESNext",
    "skipLibCheck": true,
    "paths": {
      "undici-types": [
        "./node_modules/undici/types"
      ]
    },
    "sourceMap": true
  },
  "include": [
    "public/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "public/dist",
    "**/*.js"
  ]
}